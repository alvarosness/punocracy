{{define "content"}}
<div class="container text-center">
    <form class="form-signin" action="/register" method="POST">
        <h1 class="h3 mb-3 font-weight-normal">Please Log In</h1>
        <input class="form-control" id="inputUsername" type="text" name="username" placeholder="Username">
        <input class="form-control" id="inputEmail" type="email" name="email" placeholder="user@example.com">
        <input class="form-control" id="inputPassword" type="password" name="password" placeholder="Password">
        <input class="btn btn-lg btn-primary btn-block" type="submit" value="signup">
        <p class="mt-5 mb-3 text-muted">Punocracy 2017-2019</p>
    </form>
</div>
{{end}}