{{define "content"}}
<div class="row align-items-center">
  <div class="col-sm-12">
    <h2>Input a word for an awesome pun</h2>
  </div>
</div>
<div class="row align-items-center">
  <div class="col-sm-12">
    <form class="form" method="post" action="/">
      <div class="input-group">
        <input type="text" class="form-control" id="wordInput" placeholder="Quill">
        <div class="input-group-append">
          <button class="btn btn-outline-secondary" type="button"><img src="search.svg"></button>
        </div>
      </div>
    </form>
  </div>
</div>


<div class="row">
  <div class="col-sm-6">
    <!-- <div class="container"> -->
      <h2>Words</h2>
      <div class="list-group list-group-flush">
        {{if .Words}}
        {{range .Words}}
        <div class="list-group-item">
          <h5><a href="/?q={{.}}">{{.}}</a></h5>
        </div>
        {{end}}
        {{else}}
        <div class="list-group-item">
          <h5>There aren't Any popular words yet</h5>
        </div>
        {{end}}
      <!-- </div> -->
    </div>
  </div>

  <div class="col-sm-6">
    <h2>Popular Phrases</h2>
    <div class="list-group list-group-flush">
      {{if .Phrases}}
      {{range .Phrases}}
      <div class="list-group-item">
        <h5 class="mb-1">{{.}}</h5>
        <div>
          <img src="star.svg" alt="">
          <img src="star.svg" alt="">
          <img src="star.svg" alt="">
          <img src="star.svg" alt="">
          <img src="star.svg" alt="">
        </div>
        <div class="d-flex justify-content-between">
          <p class="mb-1"><a href="#">Anon</a></p>
          <small>30 days ago</small>
        </div>
      </div>
      {{end}}
      {{else}}
      <div class="list-group-item">
        <h5>There aren't Any popular phrases yet.</h5>
        <h5>Why not input your own phrase <a href="#">here</a>?</h5>
      </div>
      {{end}}
    </div>
  </div>
</div>
{{end}}